<Window x:Class="ja_training_szponcenie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ja_training_szponcenie"
        xmlns:views="clr-namespace:ja_training_szponcenie.Views"
        mc:Ignorable="d"
        Title="JA Training - Dashboard"
        Height="900"
        Width="1600"
        WindowState="Maximized"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Aplikacja Treningowa" FontSize="24" FontWeight="Bold"
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button x:Name="OpenRecordsPowerCurveButton"
                   Content="Otwórz Rekordy i Power Curve"
                   Click="OpenRecordsPowerCurveButton_Click"
                   Padding="20,10"
                   FontSize="16"
                   Background="#2196F3"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Width="300"/>
        </StackPanel>
        <ContentControl x:Name="MainContent">
            <views:DashboardView/>
        </ContentControl>
    </Grid>
</Window>
