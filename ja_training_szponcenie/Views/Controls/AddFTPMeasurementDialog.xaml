<Window x:Class="ja_training_szponcenie.Views.Controls.AddFTPMeasurementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Dodaj nowy pomiar FTP" Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- ==================== HEADER ==================== -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Dodaj nowy pomiar FTP" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="CloseButton" Content="âŒ" Style="{StaticResource PrimaryButtonStyle}"
                    Background="Transparent" Width="40" Height="40" HorizontalAlignment="Right"/>
        </Grid>

        <!-- ==================== FORMULARZ ==================== -->
        <ScrollViewer Grid.Row="1" Style="{StaticResource CustomScrollViewerStyle}">
            <StackPanel>

                <!-- Pole 1: Data pomiaru -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Data testu" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <DatePicker x:Name="TestDatePicker" Padding="12,8" FontSize="14"/>
                </StackPanel>

                <!-- Pole 2: WartoÅ›Ä‡ FTP -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="FTP (W) *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Grid>
                        <TextBox x:Name="FTPValueTextBox" Padding="12,12" FontSize="20" FontWeight="Bold" MaxWidth="300" HorizontalAlignment="Left"/>
                        <TextBlock Text="W" FontSize="20" VerticalAlignment="Center" Margin="280,0,0,0"
                                   Foreground="{StaticResource TextSecondaryColor}"/>
                    </Grid>
                    <TextBlock Text="Walidacja: 50-600 W" FontSize="11" Foreground="{StaticResource TextSecondaryColor}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Pole 3: Waga w momencie testu -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Waga (opcjonalne)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Grid>
                        <TextBox x:Name="WeightTextBox" Padding="12,8" FontSize="14" MaxWidth="300" HorizontalAlignment="Left"/>
                        <TextBlock Text="kg" FontSize="14" VerticalAlignment="Center" Margin="280,0,0,0"
                                   Foreground="{StaticResource TextSecondaryColor}"/>
                    </Grid>
                    <CheckBox x:Name="UseCurrentWeightCheckBox" Content="UÅ¼yj aktualnej wagi (75.0 kg)" Margin="0,8,0,0" IsChecked="True"/>

                    <!-- Auto-obliczenia -->
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="12,8" Margin="0,12,0,0" MaxWidth="300" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="W/kg:" FontSize="12" Foreground="{StaticResource TextSecondaryColor}"/>
                            <TextBlock x:Name="WattsPerKgTextBlock" Text="3.8 W/kg" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Pole 4: Å¹rÃ³dÅ‚o -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Å¹rÃ³dÅ‚o pomiaru" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="SourceComboBox" Padding="12,8" FontSize="14" SelectedIndex="0">
                        <ComboBoxItem Content="Test 20min"/>
                        <ComboBoxItem Content="Test rampy"/>
                        <ComboBoxItem Content="Test 8min"/>
                        <ComboBoxItem Content="Szacowany z treningÃ³w"/>
                        <ComboBoxItem Content="RÄ™cznie wprowadzony"/>
                        <ComboBoxItem Content="Inne"/>
                    </ComboBox>
                </StackPanel>

                <!-- Pole 5: Notatka -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Notatka (opcjonalna)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="NoteTextBox" Padding="12,8" FontSize="14" Height="100"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             MaxLength="500"/>
                    <TextBlock x:Name="CharCountTextBlock" Text="0/500" FontSize="11"
                               Foreground="{StaticResource TextSecondaryColor}" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Checkbox: Ustaw jako aktualny FTP -->
                <CheckBox x:Name="SetAsCurrentFTPCheckBox" Content="Ustaw jako aktualny FTP" Margin="0,0,0,20"
                          FontSize="14" FontWeight="SemiBold" IsChecked="True"/>

                <!-- PodglÄ…d wpÅ‚ywu -->
                <Border x:Name="ImpactPreview" Background="#FFF3E0" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="To zmieni Twoje strefy mocy:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Z4:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBlock Text="Z5:" FontSize="12" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="251-291W â†’ 260-299W" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock Text="292-332W â†’ 300-342W" FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ==================== PRZYCISKI ==================== -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CancelButton" Grid.Column="1" Content="Anuluj"
                    Style="{StaticResource PrimaryButtonStyle}" Background="#9E9E9E"
                    Padding="24,12" Margin="0,0,12,0" Width="120"/>

            <Button x:Name="SaveButton" Grid.Column="2" Content="ðŸ’¾ Zapisz"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Padding="24,12" Width="160" FontSize="16" FontWeight="SemiBold"/>
        </Grid>
    </Grid>
</Window>
