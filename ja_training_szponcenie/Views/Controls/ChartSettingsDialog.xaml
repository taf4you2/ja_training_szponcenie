<Window x:Class="ja_training_szponcenie.Views.Controls.ChartSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ustawienia wykresu" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <TextBlock Text="⚙️ Ustawienia wykresu" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Sekcja: Wygląd wykresu -->
                <TextBlock Text="Wygląd wykresu" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" Padding="15" CornerRadius="6" Margin="0,10,0,0">
                    <StackPanel>
                        <!-- Szerokość linii -->
                        <TextBlock Text="Szerokość linii:" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="1" Maximum="5" Value="3" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1" Text="3 px" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Rozmiar punktów -->
                        <TextBlock Text="Rozmiar punktów:" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="4" Maximum="12" Value="8" TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <TextBlock Grid.Column="1" Text="8 px" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Przezroczystość siatki -->
                        <TextBlock Text="Przezroczystość siatki:" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,5,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0" Minimum="0" Maximum="100" Value="50"/>
                            <TextBlock Grid.Column="1" Text="50%" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Pokaż legendę -->
                        <CheckBox Content="Pokaż legendę" IsChecked="True" Margin="0,5"/>

                        <!-- Pozycja legendy -->
                        <TextBlock Text="Pozycja legendy:" Style="{StaticResource LabelStyle}" Margin="0,10,0,5"/>
                        <ComboBox Margin="0,5">
                            <ComboBoxItem Content="Góra"/>
                            <ComboBoxItem Content="Dół" IsSelected="True"/>
                            <ComboBoxItem Content="Lewo"/>
                            <ComboBoxItem Content="Prawo"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Kolory -->
                <TextBlock Text="Kolory" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" Padding="15" CornerRadius="6" Margin="0,10,0,0">
                    <StackPanel>
                        <!-- Kolor linii głównej -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Kolor linii głównej:" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Width="60" Height="30" Background="#2196F3" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="4" Cursor="Hand"/>
                        </Grid>

                        <!-- Kolor linii porównawczej -->
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Kolor linii porównawczej:" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Width="60" Height="30" Background="#F44336" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="4" Cursor="Hand"/>
                        </Grid>

                        <!-- Kolor tła wykresu -->
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Kolor tła wykresu:" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Width="60" Height="30" Background="#FAFAFA" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="4" Cursor="Hand"/>
                        </Grid>

                        <!-- Kolor siatki -->
                        <Grid Margin="0,10,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Kolor siatki:" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Width="60" Height="30" Background="#E0E0E0" BorderBrush="#BDBDBD" BorderThickness="1" CornerRadius="4" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Punkty czasowe -->
                <TextBlock Text="Punkty czasowe" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" Padding="15" CornerRadius="6" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="Wybierz czasy do wyświetlenia na wykresie:" Style="{StaticResource LabelStyle}" Margin="0,0,0,10"/>

                        <!-- Krótkie czasy -->
                        <TextBlock Text="Sprinty (<1 min):" FontWeight="SemiBold" FontSize="12" Margin="0,5"/>
                        <WrapPanel Margin="0,5,0,15">
                            <CheckBox Content="5s" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="10s" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="15s" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="20s" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="30s" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="45s" IsChecked="True" Margin="0,0,15,5"/>
                        </WrapPanel>

                        <!-- Średnie czasy -->
                        <TextBlock Text="Interwały (1-20 min):" FontWeight="SemiBold" FontSize="12" Margin="0,5"/>
                        <WrapPanel Margin="0,5,0,15">
                            <CheckBox Content="1 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="2 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="3 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="5 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="8 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="10 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="20 min" IsChecked="True" Margin="0,0,15,5"/>
                        </WrapPanel>

                        <!-- Długie czasy -->
                        <TextBlock Text="Długie wysiłki (>20 min):" FontWeight="SemiBold" FontSize="12" Margin="0,5"/>
                        <WrapPanel Margin="0,5,0,15">
                            <CheckBox Content="30 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="45 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="60 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="90 min" IsChecked="True" Margin="0,0,15,5"/>
                            <CheckBox Content="120 min" IsChecked="True" Margin="0,0,15,5"/>
                        </WrapPanel>

                        <Button Content="+ Dodaj własny czas" Background="Transparent" BorderBrush="#2196F3" BorderThickness="1"
                               Foreground="#2196F3" Padding="10,5" Cursor="Hand"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer - Przyciski -->
        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" Padding="20,8" Margin="5,0" Background="#757575" Foreground="White" BorderThickness="0"/>
                <Button Content="Przywróć domyślne" Padding="20,8" Margin="5,0" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                <Button Content="Zastosuj" Padding="20,8" Margin="5,0" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
